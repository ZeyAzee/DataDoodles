# ============================================
# Build Connection datasets
# Dataset: education_conflict_merged.csv
# ============================================

from google.colab import files
import pandas as pd
from pathlib import Path

# -----------------------
# Upload dataset
# -----------------------
print(" Upload education_conflict_merged.csv")
uploaded = files.upload()
file_name = list(uploaded.keys())[0]
df = pd.read_csv(file_name)

countries = [
    "Afghanistan", "Syria", "Yemen", "Sudan", "Ukraine", "Palestine",
    "Germany", "Canada", "Japan", "Brazil", "Kenya"
]
df = df[df["country"].isin(countries)]

# -----------------------
# 3-Level Categorization
# -----------------------
def categorize(x):
    if x < 10: return "Low Exclusion"
    if x < 20: return "Medium Exclusion"
    return "High Exclusion"

df["education_level"] = df["out_of_school_pct"].apply(categorize)

# -----------------------
# Build Sankey connections
# -----------------------
sankey = (
    df.groupby(["conflict_status", "education_level"])
    .size()
    .reset_index(name="value")
)

Path("data_connections").mkdir(exist_ok=True)
sankey.to_csv("data_connections/sankey.csv", index=False)

print("âœ… sankey.csv created with 3 education levels!")
sankey
